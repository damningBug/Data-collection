<Window x:Class="Data_collection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_collection" 
        xmlns:viewmodels="clr-namespace:Data_collection.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="数据采集系统" Height="600" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="30"/>  <!-- 状态栏行 -->
        </Grid.RowDefinitions>

        <!-- 左侧数据展示区域 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 数据列表 -->
            <ListView ItemsSource="{Binding DataItems}" Grid.Column="0" Margin="6" d:ItemsSource="{d:SampleData ItemCount=6}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="35"/>
                        <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" Width="70"/>
                        <GridViewColumn Header="值" DisplayMemberBinding="{Binding Value}" Width="60"/>
                        <GridViewColumn Header="日期" DisplayMemberBinding="{Binding CreatedDate, StringFormat='yyyy-MM-dd'}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- 右侧可以添加其他内容 -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 右上角设置按钮 -->
                <Button Grid.Row="0" Content="设置" Command="{Binding OpenSettingsCommand}" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="5" Padding="5,2" Width="70"/>

                <TextBlock Grid.Row="1" Text="右侧区域" VerticalAlignment="Center" 
                           HorizontalAlignment="Center" FontSize="16"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!-- 左侧筛选控件 -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="名称筛选:" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{Binding FilterName, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center" Margin="5,0"/>
                    <Button Content="查询" Command="{Binding FilterCommand}" Width="60" Height="25" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="日期筛选:" VerticalAlignment="Center"/>
                    <DatePicker Width="150" SelectedDate="{Binding FilterDate}" 
                                VerticalAlignment="Center" Margin="5,0"/>
                    <Button Content="重置" Command="{Binding ResetFilterCommand}" 
                            Width="60" Height="25" Margin="5,0"/>
                </StackPanel>
            </Grid>
            <!-- 右侧筛选区域（可放置其他筛选条件或信息） -->
            <Grid Grid.Column="1" Margin="5">
                <Button Grid.Row="0" Content="导出" Command="{Binding ExportCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,35,5,0" Padding="5,2" Width="70"/>
            </Grid>
        </Grid>
        
        <!-- 状态栏，显示更新信息 -->
        <StatusBar Grid.Row="2" Margin="5">
            <TextBlock Text="{Binding StatusMessage}"/>
        </StatusBar>
    </Grid>
</Window>
